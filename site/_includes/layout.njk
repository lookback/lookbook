<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Lookbook</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://fonts.googleapis.com/css?family=Lato:300,300i,400,400i,700,700i,900,900i"
      rel="stylesheet"
    />
    <!-- Lookbook CSS -->
    <link rel="stylesheet" href="{{ '/assets/lookbook.dist.css' | url }}" />
    <!-- Site CSS -->
    <link rel="stylesheet" href="{{ '/assets/site.dist.css' | url }}" />
    <link rel="shortcut icon" href="https://lookback.io/favicon.ico" />
  </head>
  <body>
  <aside role="navigation">
      <a href="/" class="inline-block mb-32 opacity-80 hover:opacity-100">
        <img src="{{ '/assets/lookback-logo.svg' | url }}" alt="Lookback logo" />
      </a>

      <a href="http://github.com/lookback/lookbook" class="flex items-center mb-24 hover:no-underline text-grey-60">
        <div class="mr-3">
          {% include 'github-icon.njk' %}
        </div>
        <div class="leading-none">
          <span class="block text-f5 text-blue-60">GitHub</span>
          <small>{{ pkg.version }}</small>
        </div>
      </a>

      <nav role="navigation">
        <h2>Get started</h2>

        <ul>
          <li class="{% if page.fileSlug == 'css'%}nav-active{% endif %}">
            <a href="/css">Use the CSS</a>
          </li>
          <li class="{% if page.fileSlug == 'colors'%}nav-active{% endif %}">
            <a href="/colors">Colors</a>
          </li>
          <li class="{% if page.fileSlug == 'brand'%}nav-active{% endif %}">
            <a href="/brand">Logotype &amp; Brand</a>
          </li>
        </ul>

        <h2>Styling</h2>

        <ul>
          <li class="{% if page.fileSlug == 'styles'%}nav-active{% endif %}">
            <a href="/styles">Styles</a>
          </li>
        </ul>

        <h2>Components</h2>

        <ul>
          <li class="{% if page.fileSlug == 'buttons'%}nav-active{% endif %}">
            <a href="/components/buttons">Buttons</a>
          </li>
        </ul>
      </nav>
    </aside>

    <main role="main" class="pt-32">
      {{ content | safe }}
    </main>
  </body>
</html>
