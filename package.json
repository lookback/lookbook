{
  "name": "lookbook",
  "version": "2.0.0-alpha.14",
  "description": "The design system of Lookback",
  "main": "index.js",
  "scripts": {
    "test": "stylelint src/**/*.css",
    "build": "NODE_ENV=production scripts/build",
    "copy-dist": "mkdir -p build/assets && cp dist/lookbook.dist.css build/assets/lookbook.dist.css",
    "prestart": "npm run build && npm run copy-dist",
    "watch": "scripts/build --watch --verbose",
    "start": "eleventy --serve & postcss site/site.css --dir build/assets --ext dist.css --watch --verbose",
    "site": "eleventy && postcss site/site.css --dir build/assets --ext dist.css && npm run build && npm run copy-dist",
    "fetch-colors": "node scripts/fetch-figma-colors.js",
    "release": "node scripts/distribute.js dist/lookbook.dist.css"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/lookback/lookbook.git"
  },
  "keywords": [
    "css",
    "design",
    "system",
    "components"
  ],
  "author": "Johan Brook <johan@lookback.io>",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/lookback/lookbook/issues"
  },
  "homepage": "https://github.com/lookback/lookbook#readme",
  "devDependencies": {
    "@11ty/eleventy": "^0.7.1",
    "aws-sdk": "^2.408.0",
    "dotenv": "^6.2.0",
    "eslint": "^5.8.0",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended": "^2.1.0"
  },
  "dependencies": {
    "autoprefixer": "^9.3.1",
    "cssnano": "^4.1.7",
    "node-fetch": "^2.3.0",
    "postcss": "^7.0.14",
    "postcss-cli": "^6.0.1",
    "postcss-color-function": "^4.0.1",
    "postcss-color-hex-alpha": "^5.0.2",
    "postcss-hexrgba": "^1.0.1",
    "postcss-import": "^12.0.1",
    "postcss-mixins": "^6.2.1",
    "postcss-nested": "^4.1.1",
    "postcss-simple-vars": "^5.0.1",
    "tailwindcss": "^1.0.0-beta.3"
  }
}
