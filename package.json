{
  "name": "@lookback/lookbook",
  "version": "7.0.0-beta.3",
  "description": "The design system of Lookback",
  "main": "index.js",
  "types": "dist/types.d.ts",
  "scripts": {
    "build": "concurrently npm:build:* && npm run generate-types",
    "build:css": "./build-css.sh",
    "build:colors": "cat gen/figma-variables.json | node scripts/generate-colors.js > dist/colors.json",
    "start": "concurrently npm:watch:*",
    "watch:gen": "node watch.js",
    "watch:css": "./build-css.sh -w",
    "generate-types": "cat dist/colors.json | node scripts/generate-types.js > dist/types.d.ts",
    "vars": "echo '@figma-variables' | postcss --no-map",
    "prepublishOnly": "npm run --silent vars > dist/vars"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/lookback/lookbook.git"
  },
  "license": "UNLICENSED",
  "files": [
    "index.js",
    "lib",
    "dist"
  ],
  "keywords": [
    "css",
    "design",
    "system",
    "components"
  ],
  "author": "Johan Brook <johan@lookback.io>",
  "bugs": {
    "url": "https://github.com/lookback/lookbook/issues"
  },
  "homepage": "https://github.com/lookback/lookbook#readme",
  "devDependencies": {
    "@figma/plugin-typings": "*",
    "@types/node": "^24.0.4",
    "chokidar": "^4.0.3",
    "concurrently": "^9",
    "prettier": "=2.0.5"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4",
    "postcss": "^8",
    "postcss-cli": "^11",
    "postcss-import": "^16",
    "postcss-nested": "^7"
  },
  "peerDependencies": {
    "postcss": "^8",
    "tailwindcss": "^4"
  }
}
